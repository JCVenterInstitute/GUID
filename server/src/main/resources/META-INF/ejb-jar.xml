<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
	<description>GUID DBInterface Server Beans</description>
	<display-name>GuidDBInterfaceServerBeans</display-name>
	<enterprise-beans>
		<session>
			<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
			<home>org.jtc.app_db_interface.guid.api.ejb.GuidAdminHome</home>
			<remote>org.jtc.app_db_interface.guid.api.ejb.GuidAdminRemote</remote>
			<ejb-class>org.jtc.app_db_interface.guid.app.ejb.GuidAdminBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
			<env-entry>
				<env-entry-name>EJBDataSource</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
				<env-entry-value>GUID_DS</env-entry-value>
			</env-entry>
            <env-entry>
                <env-entry-name>EJBUserIdentifier</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>GUIDBLOCKSERVERADMIN</env-entry-value>
            </env-entry>
        </session>
        <session>
            <ejb-name>GuidDBInterface.GuidClient</ejb-name>
            <home>org.jtc.app_db_interface.guid.api.ejb.GuidClientHome</home>
            <remote>org.jtc.app_db_interface.guid.api.ejb.GuidClientRemote</remote>
            <ejb-class>org.jtc.app_db_interface.guid.app.ejb.GuidClientBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
           <env-entry>
                <env-entry-name>EJBDataSource</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>GUID_DS</env-entry-value>
            </env-entry>
            <env-entry>
                <env-entry-name>EJBUserIdentifier</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>GUIDBLOCKSERVERCLIENT</env-entry-value>
            </env-entry>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getGUIDBlock</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>createGUIDNamespace</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>refreshCachedNamespaces</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
        <container-transaction>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getGUIDAllocationInfoByGUID</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getGUIDAllocationInfoByNamespace</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getGUIDAllocationInfoAll</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getGUIDNamespaceInfo</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>ping</method-name>
			</method>
            <method>
				<ejb-name>GuidDBInterface.GuidAdmin</ejb-name>
				<method-intf>Remote</method-intf>
				<method-name>getCachedBlockInfo</method-name>
			</method>
			<trans-attribute>Supports</trans-attribute>
		</container-transaction>
        <container-transaction>
            <method>
                <ejb-name>GuidDBInterface.GuidClient</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>*</method-name>
            </method>
            <trans-attribute>RequiresNew</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
